<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".RobotControlActivity">
    
    <Button
        android:id="@+id/start_robot"
        android:text="Start"
        android:background="@android:color/holo_green_light"
        android:foreground="@android:color/white"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_width="100dp"
        android:layout_height="100dp"/>

    <ScrollView
        android:layout_width="0dp"
        app:layout_constraintWidth_default="percent"
        app:layout_constraintWidth_percent=".7"
        android:layout_height="match_parent"
        app:layout_constraintLeft_toRightOf="@id/start_robot"
        app:layout_constraintRight_toLeftOf="@id/stop_robot">
        <TextView
            android:id="@+id/log"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"/>
    </ScrollView>

    <Button
        android:id="@+id/stop_robot"
        android:text="Stop"
        android:background="@android:color/holo_red_light"
        android:foreground="@android:color/white"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_width="100dp"
        android:layout_height="100dp"/>

    <Button
        android:id="@+id/connect"
        android:text="Connect"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_width="100dp"
        android:layout_height="100dp"/>

    <Button
        android:id="@+id/robot2manager"
        android:text="To Manager"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_width="100dp"
        android:layout_height="100dp"/>


</androidx.constraintlayout.widget.ConstraintLayout>